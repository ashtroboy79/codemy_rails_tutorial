<h1>Editing Friend</h1>
<div class="card">
  <div class="card-body">
    <%= render 'form', friend: @friend %>
  </div>
</div>
<br/>
<%= link_to 'Show', @friend, class:"btn btn-outline-secondary"%>
<%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' } ,  class:"btn btn-outline-danger"%>
<%= link_to 'Back', friends_path, class:"btn btn-outline-dark"%>
